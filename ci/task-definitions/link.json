{
    "family": "{{IMAGE_NAME}}",
    "executionRoleArn": "{{ECS_CONTAINER_ROLE}}",
    "containerDefinitions": [
        {
            "name": "{{IMAGE_NAME}}",
            "image": "{{REPOSITORY}}:{{VERSION}}",
            "cpu": {{CONTAINER_CPU}},
            "memory": {{CONTAINER_MEMORY}},
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 0
                }
            ],
            "environment": [
                {
                    "name": "DB_HOST",
                    "value": "{{DB_HOST}}"
                },
                {
                    "name": "DB_USER",
                    "value": "{{DB_USER}}"
                },
                {
                    "name": "DB_PASSWORD",
                    "value": "{{DB_PASSWORD}}"
                },
                {
                    "name": "DB_NAME",
                    "value": "{{DB_NAME}}"
                },
                {
                    "name": "REDIS_HOST",
                    "value": "{{REDIS_HOST}}"
                },
                {
                    "name": "REDIS_PORT",
                    "value": "{{REDIS_PORT}}"
                },
                {
                    "name": "REDIS_DATABASE",
                    "value": "{{REDIS_DATABASE}}"
                },
                {
                    "name": "REDIS_PREFIX",
                    "value": "{{REDIS_PREFIX}}"
                },
                {
                    "name": "APP_ENV",
                    "value": "{{APP_ENV}}"
                },
                {
                    "name": "APP_VERSION",
                    "value": "{{VERSION}}"
                }
            ]
        }
    ]
}
